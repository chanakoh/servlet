package com.kh.product;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;
import java.util.List;

public class ProductDAO {
	private static final String jdbcURL = "jdbc:oracle:thin:@localhost:1521:xe";
	private static final String user = "KHCAFE";
	private static final String pw = "KHCAFE";
	
	public ProductDAO() {
		try {
			Class.forName("oracle.jdbc.OracleDriver");
		} catch (ClassNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}	
	}
	public List<Product> getAllProducts(){
		List<Product> products = new ArrayList<>();
		try {
			Connection connection = DriverManager.getConnection(jdbcURL, user, pw);
			String sql = "SELECT * FROM PRODUCTS";
			PreparedStatement ps = connection.prepareStatement(sql);
			ResultSet resultSet = ps.executeQuery();
			
			while(resultSet.next()) {
				
				int productId = resultSet.getInt("product_id");
				String productName = resultSet.getString("product_name");
				String category = resultSet.getString("category");
				double price = resultSet.getDouble("price");
				int stockQuantity = resultSet.getInt("stock_quantity");
				Product product = new Product(productId, productName,category,price,stockQuantity);
				products.add(product);
			}
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return products;
	}
	public Product getProductId(int productId,String productName,String category,double price,int stockQuantity) {
		Product product = null;
		try {
			Connection connection = DriverManager.getConnection(jdbcURL, user, pw);
			String sql = "SELECT * FROM PRODUCTS WHERE PRODUCT_ID = 1";
			PreparedStatement ps = connection.prepareStatement(sql);
			ResultSet resultSet = ps.executeQuery();
			//select해서 1만 볼 수 있는 쿼리 작성하고
			//new product 이용해서 값 가지고오기.	
			if(resultSet.next()) {
				int pId= resultSet.getInt("product_id");
				String pName = resultSet.getString("product_name");
				String category1 = resultSet.getString("category");
				double price1 = resultSet.getDouble("price");
				int stockQuantity1 = resultSet.getInt("stock_quantity");
				product = new Product(pId, pName, category1, price1, stockQuantity1);
				
			}
			
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		return product;
	}
}
